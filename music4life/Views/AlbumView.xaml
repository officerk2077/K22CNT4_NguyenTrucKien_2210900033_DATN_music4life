<UserControl x:Class="music4life.Views.AlbumView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style x:Key="AlbumCardStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Albums" FontSize="32" FontWeight="Bold" Foreground="White" Margin="30,20,0,10"/>

        <ListBox Grid.Row="1"
                 ItemsSource="{Binding AlbumList}"
                 Background="Transparent"
                 BorderThickness="0"
                 Padding="10,10,10,20"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ScrollViewer.VerticalScrollBarVisibility="Hidden">

            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="4" VerticalAlignment="Top"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <ContentPresenter />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Button Style="{StaticResource AlbumCardStyle}" 
                            Margin="0,0,0,30" 
                            Width="160"
                            Command="{Binding DataContext.OpenAlbumCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding Title}">

                        <StackPanel>
                            <Border Width="160" Height="160" Background="#333" CornerRadius="8">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="12" Opacity="0.4" ShadowDepth="5" Direction="270"/>
                                </Border.Effect>

                                <Grid>
                                    <Image Source="{Binding AlbumCover}" Stretch="UniformToFill">
                                        <Image.Clip>
                                            <RectangleGeometry Rect="0,0,160,160" RadiusX="8" RadiusY="8"/>
                                        </Image.Clip>
                                    </Image>

                                    <Path Data="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,7A5,5 0 0,0 7,12A5,5 0 0,0 12,17A5,5 0 0,0 17,12A5,5 0 0,0 12,7M12,9A3,3 0 0,1 15,12A3,3 0 0,1 12,15A3,3 0 0,1 9,12A3,3 0 0,1 12,9Z" 
                                          Fill="#444" Stretch="Uniform" Width="60" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Path.Style>
                                            <Style TargetType="Path">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding AlbumCover}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Path.Style>
                                    </Path>
                                </Grid>
                            </Border>

                            <TextBlock Text="{Binding Title}" 
                                       Foreground="White" FontWeight="Bold" FontSize="14"
                                       Margin="0,12,0,2" TextTrimming="CharacterEllipsis" 
                                       ToolTip="{Binding Title}"
                                       TextAlignment="Center"/>

                            <TextBlock Text="{Binding Artist}" 
                                       Foreground="#B3B3B3" FontSize="13" 
                                       TextTrimming="CharacterEllipsis"
                                       TextAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>